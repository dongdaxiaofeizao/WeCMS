<view wx:if="{{!isLoad}}" class="margin-top load loading text-l text-grey"></view>
<block wx:if="{{isAdmin&&isLoad}}">
	<cmpt-comm-list source='admin' _params="{{_params}}" type="admin-cate2-list" search="{{search}}" _menus="{{sortMenus}}" _items="{{sortItems}}" route="admin/cate2_list" isTotalMenu="{{true}}" topBottom="120" placeholder="搜索" returnUrl='/pages/admin/cate/admin_cate2_list' bind:list="myCommListListener">

		<view slot="searchEnd">
			<button bindtap="url" data-url="../add/admin_cate2_add?cate1Id={{cate1Id}}" class="btn radius bg-admin margin-right-s"><text class="icon-roundadd margin-right-xxs"></text>添加二级分类</button>
		</view>

		<!-- List Begin -->
		<view class="admin-comm-list">
			<view wx:if="{{dataList && dataList.total }}" class="load text-grey">共有{{dataList.total}}条符合条件记录</view>

			<view class="item" wx:for="{{dataList.list}}" wx:key="key">
				<view class="no">{{index+1}}</view>
				<view class="level">Lv.2</view>
				<view class="header">
					<view class="left text-cut"><text wx:if="{{item.CATE2_ORDER==0}}" class="text-black margin-right-xxs" style="font-weight:normal;font-size:24rpx">[置顶]</text>『{{item.CATE2_TITLE}}』
					</view>
					<view class="right">
						<text wx:if="{{item.CATE2_STATUS==1}}" class="text-black">「正常」</text>
						<text wx:elif="{{item.CATE2_STATUS==0}}" class="text-orange">「停用」</text>
					</view>
				</view>

				<view class="info">

					<view class="info-item">
						<view class="title">所属一级分类</view>
						<view class="mao">：</view>
						<view class="content">{{title}}</view>
					</view>

					<view class="info-item">
						<view class="title">排序号</view>
						<view class="mao">：</view>
						<view class="content">{{item.CATE2_ORDER}} <text class="margin-left-s text-s text-grey">(小的先显示)</text></view>
					</view>

					<view class="info-item">
						<view class="title">文章数</view>
						<view class="mao">：</view>
						<view bind:tap="url" data-url="../../product/list/admin_product_list?search={{item.CATE2_TITLE}}" class="content">{{item.CATE2_CNT}}篇 <text class="text-s text-grey margin-left-s">[查看文章]</text></view>
					</view>


					<!--
					<view class="info-item">
						<view class="title">创建</view>
						<view class="mao">：</view>
						<view class="content">{{item.CATE2_ADD_TIME}}</view>
					</view>-->

					<view class="oprt">
						<view bindtap="url" data-url="../edit/admin_cate2_edit?id={{item._id}}" class="btn round margin-right-s"><text class="icon-edit margin-right-xxs"></text>编辑</view>

						<view bindtap="bindStatusMoreTap" data-id="{{item._id}}" class="btn margin-right-s">状态管理</view>

						<view data-idx="{{index}}" bindtap="bindMoreTap" data-id="{{item._id}}" data-idx="{{index}}" data-qr="{{item.CATE2_QR}}" data-title="{{item.CATE2_TITLE}}" class="btn margin-right-s">更多操作</view>

						<view bindtap="url" data-url="../../../product/index/product_index?cateId={{item._id}}&title={{item.CATE2_TITLE}}" class="btn margin-right-s">预览</view>

					</view>
				</view>
			</view>

		</view>
		<!-- List END -->


		<!--load begin-->
		<import src="../../../../../../tpls/public/list_load_tpl.wxml" />
		<template is="listLoadTpl" data="{{skin,dataList}}" />
		<!--load end-->

		<view style="height:100rpx"></view>

	</cmpt-comm-list>

</block>